<% provide(:title, 'All users') %>
<h1>All users</h1>

<% if @users.blank? %>
  <h2>There are no users containing the term <%= params[:search] %></h2>
<% end %>

<ul class="users">
    <%= render @users %>
</ul>

<div class="export">
<% if current_user.admin? %>
		<%=link_to "Export to XML", export_path, method: :get%>
<% end %>
</div>

