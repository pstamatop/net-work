  <div class="row">
    <aside class="col-md-4">
      <section class="post_form">
      	<b>Make a new job offer: </b><br><br>
        <%= render 'shared/joboffer_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3> Find the best job offer for you!  </h3>
      <%= render 'shared/jobofferfeed' %>
    </div>
</div>
<% end %>