<li id="<%= post.id %>">
  <% if post.user.profilepic.present? %>
  	<div class ="smallavatar"><%= link_to image_tag(post.user.profilepic.url,  size: 50), post.user %></div>
  <% else %>
	<div class ="smallavatar"><%= link_to image_tag("default-avatar.png", size: 50), post.user %></div>
  <% end %>
  <span class="user"><%= link_to [post.user.firstName, post.user.lastName].join(' '), post.user %></span>
  <span class="content">
  	<%= post.content %>
  	<% if post.attachment? %>
  		<% post.attachment.each do |item| %>
  			<%= image_tag item.url %>
  	<% end %>
  	<% end %>
  	</span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_user?(post.user) %>
      <%= link_to "delete", post, method: :delete,
                                       data: { confirm: "Are you sure you want to delete this post?" } %>
    <% end %>
  </span>
</li>